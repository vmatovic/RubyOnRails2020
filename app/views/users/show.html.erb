<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if !@user.country.nil? %>
        <%= render @user.country %>
      <% end %>
    </section>
  </aside>
</div>

<h2><strong>Recenzije</strong></h2>
<ol>
  <% @user.microposts.each do |mpost| %>
    <%= render partial: mpost, :locals => { :some_index => 2 } %>
  <% end %>
</ol>
