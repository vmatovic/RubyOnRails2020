<p id="notice"><%= notice %></p>

<h1>Promotions</h1>
<br>
<%= link_to 'New Promotion', new_promotion_path %>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Promo name</th>
      <th>Promo cost</th>
      <th>Begin date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%= will_paginate %>
  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.promo_name %></td>
        <td><%= promotion.promo_cost %></td>
        <td><%= promotion.begin_date %></td>
        <td><%= promotion.end_date %></td>
        <td><%= link_to 'Show', promotion %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion) %></td>
        <td><%= link_to 'Destroy', promotion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate %>
<br>
